<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <ImageView
        android:id="@+id/image_calculator"
        android:layout_width="194dp"
        android:layout_height="177dp"
        android:src="@drawable/calculator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"/>
    
    <EditText

        android:id="@+id/input_create_password"
        android:layout_width="380dp"
        android:layout_height="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginTop="306dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_shape"/>

    <TextView
        android:id="@+id/text_create_password"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="282dp"
        android:text="@string/create_your_password"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/input_rewrite_password"
        android:layout_width="380dp"
        android:layout_height="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="424dp"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_shape"/>

    <TextView
        android:id="@+id/text_rewrite_password"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:text="@string/re_write_your_password"
        android:textColor="@color/white"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_submit"
        android:layout_width="199dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="547dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/button_submit_shape"/>

    <TextView
        android:id="@+id/text_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/red"
        tools:text = "Password Not Match"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="225dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>